<%= render "layouts/header" %>



  <div class="mentors">
    <div class="container">
      <div id="js-list">
        <%= text_field_tag 'skill search', nil, placeholder: 'Search skills', class: 'search' %>
        <button class="button sort" data-sort="js-mentor-name">Sort by name</button>
        <ul class="mentor-list list">
          <% @mentors.each do |mentor| %>
            <li class="mentor-card">
              <a href="" class="social-links"><i class="icon-dot-3"></i></a>
              <%= link_to mentor_show_path(mentor) do %>
                <div class="mentor-image-container"><%= image_tag mentor.profile_picture.url(:medium), class: "mentor-photo" %></div>
                <h2 class="js-mentor-name"><%= mentor.name %></h2>
              <% end %>
              <p class="mentor-skills js-mentor-skills"><%= mentor.skills.map(&:name).join(", ") %></p>
              <%= link_to "View Profile", mentor_show_path(mentor), class: "button x-small secondary" %>
            </li>
          <% end %>
        </ul>
        <ul class="pagination">
        </ul>
      </div>
    </div>
  </div>

<script>
var options = {
  valueNames: ['js-mentor-skills', 'js-mentor-name'],
  page: 25,
  plugins: [ ListPagination({}) ]
};

var list = new List("js-list", options);
</script>
<%= render "layouts/footer" %>
