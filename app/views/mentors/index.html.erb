<%= render "layouts/header" %>

<div class="container">
  <h3>Mentors</h3>

  <ul class="mentor-list">
    <% @mentors.each do |mentor| %>
      <li class="mentor-card">
        <%= link_to mentor_show_path(mentor) do %>
          <img class="mentor-photo" src="/assets/default.png" src="Open Mentor Logo" />
          <h2><%= mentor.name %></h2>
        <% end %>
        <p class="mentor-skills">JavaScript, Ruby on Rails</p>
        <%= link_to "View Profile", mentor_show_path(mentor), class: "mentor-profile-link" %>
      </li>
    <% end %>
  </ul>
</div>

<%= render "layouts/footer" %>
