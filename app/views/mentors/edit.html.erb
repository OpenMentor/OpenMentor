<%= render "layouts/header" %>
<div class="container">
  <div class="form-container edit-mentor">
    <%= form_for @mentor, url: mentor_update_path, html: { multipart: true } do |f| %>

      <div class="field">
        <div class="photo-upload-container">
          <div class="mentor-image-container"><%= image_tag @mentor.profile_picture.url(:medium), :class => "mentor-photo" %></div>
          <%= f.file_field :profile_picture, :class => "mentor-photo-upload" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :name, autofocus: true %>
        <%= f.text_field :name, value: @mentor.name %>
      </div>

      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>
  </div>
</div>
