<!DOCTYPE html>
<html>
<head>
  <title>OpenMentor</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="/assets/om-favicon.png" rel="shortcut icon" type="image/x-icon">
  <script src="https://use.typekit.net/zqc3iyd.js"></script>
  <script>try{Typekit.load({ async: true });}catch(e){}</script>
</head>
<body>
  <% %w(notice alert).each do |flash_message| %>
    <% if flash[flash_message] %>
      <% [flash[flash_message]].flatten.each do |message| %>
        <p class="<%= flash_message %>"><%= message %></p>
      <% end %>
    <% end %>
  <% end %>
  <%= yield %>
  <script>document.documentElement.className += ' wf-loading';</script>
</body>
</html>
