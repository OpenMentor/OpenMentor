<%= render "layouts/header" %>

<div class="container">
  <div class="form-container">
    <h1>New Conversation</h1>

    <%= form_tag(conversations_create_path, method: :put) do %>
      <%= hidden_field_tag "sender_id", current_mentor.id %>
      <%= hidden_field_tag "receiver_id", @receiver.id %>


      <div class="field">
        <label class="to-mentor">To: <%= @receiver.name %> <<%= @receiver.email %>></label>
      </div>

      <div class="field">
        <%= label_tag :subject %>
        <%= text_field_tag :subject, "", placeholder: "Subject" %>
      </div>

      <div class="field">
        <%= label_tag :body %>
        <%= text_area_tag :body, "", placeholder: "The start of every new conversation is the start of a new journey..." %>
      </div>

      <%= submit_tag "Send", :class => "button fill" %>
    <% end %>
  </div>
</div>
