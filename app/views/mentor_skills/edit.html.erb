<%= form_tag(mentor_skills_update_path, method: :patch) do %>
  <% @mentor_skills.each do |mentor_skill| %>
    <div class="field">
      <%= check_box_tag "skills[]", mentor_skill.id, true %>
      <%= label_tag mentor_skill.name, mentor_skill.name %>
    </div>
  <% end %>

  <% @skills.each do |skill| %>
    <div class="field">
      <%= check_box_tag "skills[]", skill.id %>
      <%= label_tag skill.name, skill.name %>
    </div>
  <% end %>

  <%= submit_tag "Update" %>

<% end %>

<%= link_to "Cancel", :back, :class => "button secondary small" %>
